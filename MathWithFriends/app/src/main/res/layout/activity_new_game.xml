<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg">

    <RelativeLayout
        android:id="@+id/player1Avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#7F96FF"
        android:layout_alignParentStart="true"
        android:paddingBottom="35sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/player1ImageView"
            android:contentDescription="@string/player_1_avatar"
            android:translationZ="3dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/player1ImageView"
            android:textSize="20sp"
            android:text="You" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#F4675D"
        android:layout_alignParentEnd="true"
        android:id="@+id/player2Avatar"
        android:paddingBottom="35sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/player2ImageView"
            android:contentDescription="@string/player_1_avatar"
            android:translationZ="3dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent"
            android:layout_below="@id/player2ImageView"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/player1Avatar"
        android:layout_toStartOf="@+id/player2Avatar"
        android:id="@+id/goalNumberID"
        android:layout_margin="20dp">

        <View
            android:id="@+id/goalNumberBackground"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#F7D54C" />
        <TextView
            android:id="@+id/GoalNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:text="Goal Number is" />

        <TextView
            android:id="@+id/goalNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GoalNumberTextView"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textSize="40sp"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/player1Avatar"
        android:layout_toStartOf="@+id/player2Avatar"
        android:layout_below="@id/goalNumberID"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <View
            android:id="@+id/operationBackGround"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#F7D54C" />
        <Button
            android:id="@+id/operandButton1NewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="toggleOperation"
            android:text="+" />

        <EditText
            android:id="@+id/firstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:inputType="number"
            style="@style/Widget.AppCompat.EditText"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFFCC"
            />

        <EditText
            android:id="@+id/secondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:inputType="number"
            style="@style/Widget.AppCompat.EditText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFFCC"
            />

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg">

    <RelativeLayout
        android:id="@+id/player1Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#7F96FF"
        android:layout_alignParentStart="true"
        android:paddingBottom="35sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/player1ImageView"
            android:contentDescription="@string/player_1_avatar"
            android:translationZ="3dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/player1ImageView"
            android:textSize="20sp"
            android:text="You" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player2Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#F4675D"
        android:paddingBottom="35sp">

        <ImageView
            android:id="@+id/player2ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:contentDescription="@string/player_1_avatar"
            android:translationZ="3dp"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player2ImageView"
            android:layout_centerHorizontal="true"
            android:text="Opponent"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/player1Layout"
        android:layout_toStartOf="@+id/player2Layout"
        android:id="@+id/goalLayout"
        android:layout_margin="20dp">

        <View
            android:id="@+id/goalNumberBackground"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#F7D54C" />
        <TextView
            android:id="@+id/GoalNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:text="Goal Number is" />

        <TextView
            android:id="@+id/goalNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GoalNumberTextView"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textSize="40sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/operationLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goalLayout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/player2Layout"
        android:layout_toEndOf="@id/player1Layout">

        <View
            android:id="@+id/operationBackGround"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#F7D54C" />

        <Button
            android:id="@+id/operandButton1NewGame"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:onClick="toggleOperation"
            android:text="+" />

        <EditText
            android:id="@+id/firstNumber"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFFCC"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/secondNumber"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFFCC"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/functionalityLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player2Layout"
        android:layout_alignRight="@+id/player2Layout"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:text="SKIP" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sendButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:text="RESET" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/player1Layout"
        android:layout_alignStart="@+id/player1Layout"
        android:layout_alignTop="@+id/functionalityLayout"
        android:layout_alignBottom="@+id/functionalityLayout"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/functionalityLayout"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal|center_vertical"
            android:text="3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal|center_vertical"
            android:text="4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|center_vertical"
            android:text="7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|center_vertical"
            android:text="2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|center_vertical"
            android:text="9" />
    </LinearLayout>

</RelativeLayout>
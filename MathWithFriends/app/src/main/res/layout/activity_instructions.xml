<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outside_dojo"

    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="694dp"
        android:layout_height="374dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/instructions_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@drawable/instructions_temp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="676dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/back"
        android:onClick="onBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/queueButton"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:background="#434141"
        android:onClick="onQueueClick"
        android:soundEffectsEnabled="false"
        android:text="READY?"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/findFriend"
        app:layout_constraintTop_toBottomOf="@+id/findFriend" />

    <EditText
        android:id="@+id/findFriend"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="4dp"
        android:hint="here"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/queueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
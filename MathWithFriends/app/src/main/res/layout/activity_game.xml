<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gameBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/game_bg"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/player1Background"
        android:layout_width="135dp"
        android:layout_height="160dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#7F96FF"
        app:layout_constraintBottom_toTopOf="@+id/gameButtonsBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gameBackground" />

    <View
        android:id="@+id/goalNumberBackground"
        android:layout_width="135dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#F7D54C"
        app:layout_constraintBottom_toTopOf="@+id/gameButtonsBackground"
        app:layout_constraintEnd_toStartOf="@+id/player2Background"
        app:layout_constraintStart_toEndOf="@+id/player1Background"
        app:layout_constraintTop_toTopOf="@+id/gameBackground" />

    <View
        android:id="@+id/player2Background"
        android:layout_width="135dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:background="#F4675D"
        app:layout_constraintBottom_toTopOf="@+id/gameButtonsBackground"
        app:layout_constraintEnd_toEndOf="@+id/gameBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/gameButtonsBackground"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/game_button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/operandButton1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleOperand"
        android:src="@drawable/button1"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gameButtonsBackground" />

    <Button
        android:id="@+id/operandButton2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleOperand"
        android:src="@drawable/button1"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operationButton1" />

    <Button
        android:id="@+id/operandButton3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleOperand"
        android:src="@drawable/button1"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operationButton2" />

    <Button
        android:id="@+id/operandButton4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleOperand"
        android:src="@drawable/button1"
        android:text="4"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operationButton3" />

    <Button
        android:id="@+id/operandButton5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleOperand"
        android:src="@drawable/button1"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operationButton4" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/button1"
        android:text="@string/game_button_send"
        android:onClick="clickSend"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/operationButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:onClick="toggleOperation"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operandButton1" />

    <Button
        android:id="@+id/operationButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:onClick="toggleOperation"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operandButton2" />

    <Button
        android:id="@+id/operationButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:onClick="toggleOperation"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operandButton3" />

    <Button
        android:id="@+id/operationButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:onClick="toggleOperation"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/operandButton1"
        app:layout_constraintStart_toEndOf="@+id/operandButton4" />

    <ImageView
        android:id="@+id/player1Avatar"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/player_1_avatar"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="@+id/player1Background"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/player1Background"
        app:layout_constraintTop_toTopOf="@+id/player1Background"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <ImageView
        android:id="@+id/player2Avatar"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/player_1_avatar"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="@+id/player2Background"
        app:layout_constraintStart_toStartOf="@+id/player2Background"
        app:layout_constraintTop_toTopOf="@+id/player2Background"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="You"
        app:layout_constraintBottom_toBottomOf="@+id/player1Background"
        app:layout_constraintEnd_toEndOf="@+id/player1Avatar"
        app:layout_constraintStart_toStartOf="@+id/player1Avatar"
        app:layout_constraintTop_toBottomOf="@+id/player1Avatar" />

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Opponent"
        app:layout_constraintBottom_toBottomOf="@+id/player2Background"
        app:layout_constraintEnd_toEndOf="@+id/player2Avatar"
        app:layout_constraintStart_toStartOf="@+id/player2Avatar"
        app:layout_constraintTop_toBottomOf="@+id/player2Avatar" />

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Goal Number"
        app:layout_constraintBottom_toBottomOf="@+id/goalNumberBackground"
        app:layout_constraintEnd_toEndOf="@+id/goal"
        app:layout_constraintStart_toStartOf="@+id/goal" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/goalTextView"
        app:layout_constraintEnd_toEndOf="@+id/goalNumberBackground"
        app:layout_constraintStart_toStartOf="@+id/goalNumberBackground"
        app:layout_constraintTop_toTopOf="@+id/goalNumberBackground" />

</android.support.constraint.ConstraintLayout>